<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgofdefault"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary"
        >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/setting"/>
    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="设置"
        android:layout_marginLeft="5dp"
        android:textColor="@drawable/tv_color"
        android:gravity="center"
        android:textSize="20sp"
        android:clickable="true"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/bg"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            style="@style/set_textlist"
            >
        <TextView
            style="@style/textright2"
            android:text="姓名："
            />
        <TextView
            android:id="@+id/set_name"
            style="@style/textleft2"
            android:text="王二麻子"

            />
        </LinearLayout>
        <LinearLayout
            style="@style/set_textlist">
            <TextView
                android:text="所属部门："
                style="@style/textright2"/>
        <TextView
            android:id="@+id/set_department"
            style="@style/textleft2"
            android:text="事务部      "
            />
        </LinearLayout>
        <LinearLayout
            style="@style/set_textlist">
            <TextView
                android:text="工号："
                style="@style/textright2"
            />
        <TextView
            android:id="@+id/set_num"
            android:text="2014100001"
            style="@style/textleft2"
            />
            </LinearLayout>
        <LinearLayout
            style="@style/set_textlist"
            >
            <TextView
                style="@style/textright2"
                android:text="乘车站点："
             />
        <TextView
            android:id="@+id/set_site"
            style="@style/textleft2"
            android:text="金鱼街站 "
            />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/set_sign"
            style="@style/setting_menu"
            android:text="已签到"
            />
    <TextView
        android:id="@+id/signhistory"
        android:text="签到纪录"
        style="@style/setting_menu"
        android:layout_marginTop="15dp"
        />
        <TextView
            android:id="@+id/reset"
            android:layout_marginTop="3dp"
            android:text="注销"
            style="@style/setting_menu"
            />
    </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/quit"
        android:text="退出登录"
        android:background="@android:color/holo_red_light"
        style="@style/quitmargin"
        />
</LinearLayout>
