<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:text="寻物平台\n如果您丢了东西，发布寻物启事\n如果您捡到东西，发布失物招领"
        android:background="@color/gray"
        android:textColor="@drawable/tv_color"
        android:gravity="center"
        android:textSize="20sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="内        容："
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/edt_addlost_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请尽量简洁易懂"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="联系方式："
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/edt_addlost_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="电话或地址"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_addlost_get"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:text="寻物启事"
            android:background="@color/gray"
            android:textColor="@drawable/tv_color"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:clickable="true"
            />
        <TextView
            android:id="@+id/tv_addlost_set"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:text="失物招领"
            android:background="@color/gray"
            android:textColor="@drawable/tv_color"
            android:gravity="center"
            android:textSize="20sp"
            android:clickable="true"
            />
    </LinearLayout>
</LinearLayout>