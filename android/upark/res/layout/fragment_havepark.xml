<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	
    <ImageView 
        android:id="@+id/iv_add_park"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@drawable/add_park"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout 
                android:id="@+id/ll_add_park"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
           		 android:background="#e0ffffff"
           		 android:visibility="gone"
                >
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="添加车位的地理位置"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:textColor="#ccc"
                    android:padding="5dp"
                    />
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <Button 
                        android:id="@+id/btn_addpark_location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="直接定位"
                        android:textColor="#fff"
                        android:background="@drawable/btn_style"
                        />
                    <TextView 
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        />
                    <Button 
                        android:id="@+id/btn_addpark_place"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="手动输入"
                        android:textColor="#fff"
                        android:background="@drawable/btn_style"
                        />
                </LinearLayout>
                <TextView 
                    android:id="@+id/tv_addpark_showplace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#ccc"
                    android:text="你的车位位置是"
                    android:gravity="center_horizontal"
                    />
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >                    
	                <ImageView 
	                    android:id="@+id/iv_add_park_pic"
	                    android:layout_width="200dp"
	                    android:layout_height="120dp"
	                    android:src="@drawable/parksample"
	                    />
	                <LinearLayout 
	                    android:layout_width="match_parent"
	                    android:layout_height="match_parent"
	                    android:orientation="vertical"
	                    android:layout_marginLeft="20dp"
	                    >
	                    <TextView 
		                    android:layout_width="match_parent"
		                    android:layout_height="0dp"
		                    android:layout_weight="1"
		                    android:text="确定无误后确定进行审核"
		                    android:textSize="20sp"
		                    android:gravity="center"
		                    android:textColor="#ccc"
		                    />
	                    <Button 
	                        android:id="@+id/btn_addpark_submit"
	                        android:layout_width="match_parent"
	                        android:layout_height="wrap_content"
	                        android:text="确定"
	                        android:textColor="#fff"
	                        android:background="@drawable/btn_style"
	                        />
	                </LinearLayout>
                </LinearLayout>
                
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
	            <TextView 
	                android:id="@+id/tv_blow_park"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                android:layout_height="wrap_content"
	                android:padding="20dp"
	                android:text="下面是您添加的车位,点击刷新"
	                android:textSize="23sp"
	                android:gravity="center_horizontal"
	                />
	            <ProgressBar
	                android:id="@+id/pb_loadpark" 
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:visibility="gone"
	                />
            </LinearLayout>
            <View 
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#ccc"
                />
            <swjtu.park.ui.MyListView
                android:id="@+id/lv_addpark_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                ></swjtu.park.ui.MyListView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
